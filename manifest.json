{
  "manifest_version": 3,
  "name": "Netflix & Hotstar Ratings",
  "version": "1.0.0",
  "description": "Display IMDb and Rotten Tomatoes ratings on Netflix and Hotstar movie tiles",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.netflix.com/*",
    "https://hotstar.com/*",
    "https://*.hotstar.com/*",
    "https://www.omdbapi.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.netflix.com/*"],
      "js": ["scripts/config.js", "scripts/rating-service.js", "scripts/rating-display.js", "scripts/netflix-content.js"],
      "css": ["styles/ratings.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://hotstar.com/*", "https://*.hotstar.com/*"],
      "js": ["scripts/config.js", "scripts/rating-service.js", "scripts/rating-display.js", "scripts/hotstar-content.js"],
      "css": ["styles/ratings.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Netflix & Hotstar Ratings",
    "default_icon": {
      "16": "icons/alt-icon-16.png",
      "32": "icons/alt-icon-32.png",
      "48": "icons/alt-icon-48.png",
      "128": "icons/alt-icon-128.png"
    }
  },
  "icons": {
    "16": "icons/alt-icon-16.png",
    "32": "icons/alt-icon-32.png",
    "48": "icons/alt-icon-48.png",
    "128": "icons/alt-icon-128.png"
  }
}
